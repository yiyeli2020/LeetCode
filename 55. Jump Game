class Solution {
public:
    bool canJump(vector<int>& nums) {
        int reachable=0;
        for(int i=0;i<nums.size();i++){
            if(i>reachable) return false;
            //cout<<"i="<<i<<"  local reachable="<<reachable;
            reachable=max(reachable,i+nums[i]);
            //cout<<"   global reachable="<<reachable<<endl;
        }
        return true;
    }
};
